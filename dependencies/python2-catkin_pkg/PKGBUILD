pkgdesc="ROS - Low-level build system macros and infrastructure for ROS."
url='http://wiki.ros.org/catkin_pkg'
_name='catkin_pkg'
pkgname='python2-catkin_pkg'
pkgver='0.2.6'
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')
makedepends=('ros-build-tools' 'git')

source=("https://github.com/ros-infrastructure/${_name}/archive/${pkgver}.tar.gz")
md5sums=('448ac9243b03f5ea8dbdc64620f8de07')

build() {
  # Fix Python3 error
  /usr/share/ros-build-tools/fix-python-scripts.sh -v 2 ${srcdir}/${_name}

  cd ${srcdir}/${_name}-${pkgver}
  python2 setup.py build
}

package() {
  cd ${srcdir}/${_name}-${pkgver}
  python2 setup.py install -O2 --skip-build --prefix=/usr --root=${pkgdir}
}

